    <script>
        // Theme swapper: silk <-> abyss
        document.addEventListener('DOMContentLoaded', function () {
            const swapInput = document.getElementById('theme-swap');
            // Set initial state based on current theme
            const currentTheme = document.documentElement.getAttribute('data-theme');
            swapInput.checked = currentTheme === 'custom_silk_dark';

            swapInput.addEventListener('change', function () {
                const newTheme = swapInput.checked ? 'custom_silk_dark' : 'custom_silk';
                if (window.setTheme) {
                    window.setTheme(newTheme);
                } else {
                    document.documentElement.setAttribute('data-theme', newTheme);
                    localStorage.setItem('theme', newTheme);
                }
            });
        });
    </script>
